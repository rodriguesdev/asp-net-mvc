@model TreinaWeb.TesteASPNETMVC.Web.Models.Pessoa

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<br />
@using (Html.BeginForm("Index", "Teste", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            @Html.LabelFor(p => p.Nome)
        </div>
        <div class="col-sm-12 col-md-8 col-lg-6">
            @Html.EditorFor(p => p.Nome, new { htmlAttributes = new { id = "txtNome", @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.Nome)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            @Html.LabelFor(p => p.Idade)
        </div>
        <div class="col-sm-12 col-md-8 col-lg-6">
            @Html.EditorFor(p => p.Idade, new { htmlAttributes = new { id = "txtIdade", @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.Idade)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            @Html.LabelFor(p => p.Endereco)
        </div>
        <div class="col-sm-12 col-md-8 col-lg-6">
            @Html.EditorFor(p => p.Endereco, new { htmlAttributes = new { id = "txtEndereco", @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.Endereco)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            @Html.LabelFor(p => p.Email)
        </div>
        <div class="col-sm-12 col-md-8 col-lg-6">
            @Html.EditorFor(p => p.Email, new { htmlAttributes = new { id = "txtEmail", @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.Email)
        </div>
    </div>
    <div class="row">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
}

